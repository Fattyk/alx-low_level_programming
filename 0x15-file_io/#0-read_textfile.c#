#include <stdio.h>
#include <sys/types.h>
#include <sys/stat.h>
#include <fcntl.h>
#include <unistd.h>

/**
 * read_textfile - Print text from file to string
 * @filename: path to the file name
 * @letters: total number of character
 *
 * Return: ssize_t
 */

ssize_t read_textfile(const char *filename, size_t letters)
{
	int fd;
	malloc buff(sizeof char*letters)

	fd = open(filename, O_RDONLY);
	if(fd < STDIN_FILENO)
	{
		return(0);
	}
	filesize = read(fd, filename, letters);

	free
}
